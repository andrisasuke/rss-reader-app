<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:padding="5dp"
    android:layout_margin="2dp">

    <ImageView
        android:id="@+id/news_photo_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:scaleType="centerCrop"
        android:src="@drawable/football_sample"/>

    <com.andrisasuke.app.cardnews.custom.XTextView
        android:id="@+id/news_photo_title"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:layout_marginLeft="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="0dp"
        android:layout_alignParentBottom="true"
        tools:text="Napoli and Milan push Perin."
        android:maxLines="2"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="3dp"
        android:paddingTop="0dp"
        android:background="#40000000"
        android:textColor="@color/white"
        app:fontFamily="nsText"
        app:fontStyle="regular"/>

</RelativeLayout>